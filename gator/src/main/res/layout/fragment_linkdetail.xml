<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:id="@+id/llLinkContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of a website"
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meta Description of the website"
            android:id="@+id/tvDescription"
            android:layout_margin="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://example.com/hello"
            android:id="@+id/tvUrl"
            android:layout_margin="5dp" />
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:src="@android:drawable/divider_horizontal_bright"
        android:id="@+id/ivDivider"
        android:background="#66c740"
        android:layout_below="@+id/llLinkContent" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvTweets"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/ivDivider"/>
</RelativeLayout>