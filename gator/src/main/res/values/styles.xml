<resources>

    <!-- Base application theme. -->
    <style name="Theme.Sqrl" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#111111</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Sqrl</item>
        <item name="android:actionBarStyle">@style/ActionBar.Sqrl</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_icon_background</item>
        <item name="android:homeAsUpIndicator">@drawable/homeasupicon</item>
        <item name="android:actionBarTabStyle">@style/ActionBar.Tab.Sqrl</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar.Tab.TextStyle.Sqrl</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sqrl</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Sqrl</item>

    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Sqrl" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#400090</item>
        <item name="android:homeAsUpIndicator">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="ActionButton.Overflow.Sqrl" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
        <item name="android:panelColorBackground">@color/white</item>

    </style>

    <style name="ActionBar.Tab.Sqrl" parent="android:Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="ActionBar.Tab.TextStyle.Sqrl" parent="android:Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionBar.PopupMenu.Sqrl" parent="android:Widget.PopupMenu">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PopupMenu.Sqrl" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sqrl</item>
    </style>

    <style name="DropDownNav.Sqrl" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_sqrl</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sqrl</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sqrl</item>
    </style>


</resources>
