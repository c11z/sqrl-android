<resources>

    <!-- Base application theme. -->
    <style name="Theme.Sqrl" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#111111</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Sqrl</item>
        <item name="android:actionBarStyle">@style/ActionBar.Sqrl</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_icon_background</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_previous_item</item>-->
        <item name="android:actionBarTabStyle">@style/ActionBar.Tab.Sqrl</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Sqrl" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#400090</item>
        <item name="android:homeAsUpIndicator">@color/white</item>
    </style>

    <style name="ActionButton.Overflow.Sqrl" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="ActionBar.Tab.Sqrl" parent="android:Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">none</item>
    </style>

</resources>
